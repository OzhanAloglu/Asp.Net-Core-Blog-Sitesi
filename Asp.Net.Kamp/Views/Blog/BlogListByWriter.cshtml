@using EntityLayer.Concrete
@model List<Blog>   
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>
<br />

<table class="table table-bordered" >

    <tr>
        <th>#</th>
        <th>Blog Başlık</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>

    </tr>

    @foreach (var item in Model)
    {<tr>
        <td>@item.BlogID</td>
        <td>@item.BlogTitle</td>
            <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
        <td>@item.Category.CategoryName</td>



          <td>@if (@item.BlogStatus==true)
                {
                    <button class="btn btn-success" >@item.BlogStatus</button>
                            
                }

                else
                {
                    <button class="btn btn-dark" >@item.BlogStatus</button>
                                    
                 
                }
                
            
            
            </td>
      




        <td> <a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger" >Sil</a> </td>
        <td> <a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning" >Düzenle</a> </td>

    </tr>
        
    }

</table>
<br />
<a  href="/Blog/BlogAdd/" class="btn btn-success" >Yeni Blog Oluştur</a>

