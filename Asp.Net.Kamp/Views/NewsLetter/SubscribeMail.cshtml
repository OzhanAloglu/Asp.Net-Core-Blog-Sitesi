

<div class="tech-btm">
    <p>Teknoloji, yazılım ve diğer bloglar...</p>
    <form id="subForm" method="post">
        <input type="email" placeholder="Mail Adresinizi Giriniz!" name="Mail" required="">
        <input type="submit" id="btn" name="submit" value="Abone Ol">
        <br />
        <div id="sonuc"></div>
        <br />
    </form>
</div>
<script type="text/javascript">

    $(function () {
        $("#btn").click(function (e) {
            var bolum = document.createElement("div");
            bolum.className = "alert alert-success";
            bolum.innerHTML = "Kayıt Başarılı";
            document.body.appendChild(bolum);
            e.preventDefault();
            var veri = $("#subForm").serialize();
            $.ajax({
                type: "post",
                url: "/NewsLetter/SubscribeMail/",
                data: veri,
                success: function (f) {
                    $("#sonuc").html(bolum);
                    setTimeout(() => { window.location.reload() }, 7500);
                }
            });
        });
    });
</script>
<head>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
</head>





















































